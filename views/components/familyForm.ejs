<div id="family-form" class="row center-align">
    <h1>Commit Your Family</h1>
    <form action="/families" method="post">
        <div class="input-field col m3 s10 offset-s1">
            <input type="text" name="Name" placeholder="Full Name">
        </div>
        <div class="input-field col m3 s10 offset-s1">
            <input type="text" name="Phone" placeholder="Phone Number" data-mask="(000) 000-0000" maxlength="14">
        </div>
        <div class="input-field col m4 s10 offset-s1">
            <input type="text" name="Email" placeholder="Email Address">
        </div>
        <div class="input-field col m2 s10 offset-s1">
            <button class="btn-large waves-effect waves-light" type="submit" name="action">Submit Form</button>
            <!-- <input id="submitButton" class="waves-effect waves-light btn" type="submit" value="Submit Form"> -->
        </div>
    </form>
</div>