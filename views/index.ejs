<!DOCTYPE html>
<html>
    <head>
        <!-- Meta Information -->
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
        <title>More Than Enough</title>

        <!-- Libraries and Dependencies -->
        <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
        <link href="https://fonts.googleapis.com/css?family=Cabin+Sketch" rel="stylesheet">
        <link href="https://fonts.googleapis.com/css?family=Molengo" rel="stylesheet">
        <link rel="stylesheet" href="materialize-css/dist/css/materialize.min.css">
        <link rel="stylesheet" href="jquery-animated-headlines/dist/css/jquery.animatedheadline.css">
        <script src="jquery/dist/jquery.min.js"></script>
        <script src="materialize-css/dist/js/materialize.min.js"></script>
        <script src="jquery-animated-headlines/dist/js/jquery.animatedheadline.min.js"></script>
        <script src="flip/dist/jquery.flip.min.js"></script>

        <!-- Send Stats JSON to Jquery File -->
        <script type='text/javascript'>
            const resourcesJson = <%- JSON.stringify(resourcesData) %>
            const statsJson = <%- JSON.stringify(statsData) %>
            const errors = <%- JSON.stringify(errors) %>
            const success = <%- JSON.stringify(success) %>
        </script>

        <!-- Project Assets -->
        <link rel="stylesheet" href="css/index.css">
        <script type="text/javascript" src="js/jquery.js"></script>
        <script type="text/javascript" src="js/mapdata.js"></script>
        <script type="text/javascript" src="js/statemap.js"></script>
    </head>

    <body>
        <%- include('components/navigation'); %>
        <%- include('components/banner'); %>
        <%- include('components/familyForm'); %>
        <%- include('components/dropdownSection/dropdownSection', {number: 'one'}); %>
        <%- include('components/stats'); %>
        <%- include('components/dropdownSection/dropdownSection', {number: 'two'}); %>
        <%- include('components/grid/grid'); %>
        <%- include('components/resources'); %>
        <%- include('components/dropdownSection/dropdownSection', {number: 'three'}); %>
        <%- include('components/resourceForm/resourceForm'); %>
        <% if (success || errors) { %>
            <% if (success) { %>
                <div id="message-modal" class="modal success">
                    <div class="modal-content">
                        <h4>Congratulations:</h4>
                        <p><%= success %></p>
                    </div>
                    <div class="modal-footer">
                        <a href="#!" class="modal-close waves-effect waves-green btn-flat">Awesome</a>
                    </div>
                </div>
            <% } %>
            <% if (errors) { %>
                <div id="message-modal" class="modal errors">
                    <div class="modal-content">
                        <h4>There Were Form Errors:</h4>
                        <ul>
                            <% for (let i = 0; i < errors.length - 1; i++) { %>
                                <% for (let key in errors[i]) { %>
                                    <li><%= errors[i][key] %></li>
                                <% } %>
                            <% } %>
                        </ul>
                    </div>
                    <div class="modal-footer">
                        <a href="#!" class="modal-close waves-effect waves-green btn-flat">I Understand</a>
                    </div>
                </div>
            <% } %>
        <% } %>
    </body>
    <!-- Additional Project Assets and Dependencies -->
    <script src="jquery-mask-plugin/dist/jquery.mask.min.js"></script>
</html>